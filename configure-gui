CONF_LIBGCC(){
	LIBGMP="/usr/lib/libgmp.la"
	LIBMPFR="/usr/lib/libmpfr.la"
	LIBMPC="/usr/lib/libmpc.la"
	GMP=0
	MPFR=0
	MPC=0
	m1="Checking libgmp.la 32bit Library ... "	
	SHOW_MIXPROGRESS "$m1" 7
	OK=$[$OK+33]
	if [ -f $LIBGMP ];then
		r1=Found
		SHOW_MIXPROGRESS "$m1" "$r1"
	else
		r1="Not Found"
		SHOW_MIXPROGRESS "$m1" "$r1"
		GMP=1
	fi
	m2="Checking libmpfr.la 32bit Library ... "
	SHOW_MIXPROGRESS "$m1" "$r1" "$m2" 7
	OK=$[$OK+33]
	if [ -f $LIBMPFR ];then
		r2=Found
		SHOW_MIXPROGRESS "$m1" "$r1" "$m2" "$r2"
	else
		r2="Not Found"
		SHOW_MIXPROGRESS "$m1" "$r1" "$m2" "$r2"
		MPFR=1
	fi
	m3="Checking libmpc.la 32bit Library ... "
	SHOW_MIXPROGRESS "$m1" "$r1" "$m2" "$r2" "$m3" 7
	OK=$[$OK+33]	
	if [ -f $LIBMPC ];then
		r3=Found
		SHOW_MIXPROGRESS "$m1" "$r1" "$m2" "$r2" "$m3" "$r3"
	else
		r3="Not Found"
		SHOW_MIXPROGRESS "$m1" "$r1" "$m2" "$r2" "$m3" "$r3"
		MPC=1
	fi
	if [ $MPC -eq 0 ] && [ $MPFR -eq 0 ] && [ $GMP -eq 0 ];then
		OK=$[$OK+1]
		SHOW_MIXPROGRESS "$m1" "$r1" "$m2" "$r2" "$m3" "$r3"
		return 0
	elif [ $MPC -eq 1 ] && [ $MPFR -eq 1 ] && [ $GMP -eq 1 ];then
		OK=$[$OK+1]
		SHOW_MIXPROGRESS "$m1" "$r1" "$m2" "$r2" "$m3" "$r3"
		return 0
	else
		err(){
		echo "libgmp, libmpc and libmpfr must be all present or all non-exists"
		echo "please run following command to install all or remove all:"
		if [ "$OPM" = "yum" ] || [ "$OPM" = "zypper" ];then
			echo "install) $OPM install gmp-devel mpfr-devel mpc-devel -y"
			echo "remove)  $OPM erase gmp-devel mpfr-devel mpc-devel -y"
		else
			echo "install) $OPM install libgmp-dev libmpfr-dev libmpc-dev -y"
			echo "remove)  $OPM purge libgmp-dev libmpfr-dev libmpc-dev -y"
		fi
		}
		msg=$(err)
		SHOW_MSG "$msg"
		exit 1
	fi
}

