CONF_C_COMPILE(){
	CCC=$1
	CC=$(readlink -f $CCC|sed -rne 's@.*/@@p')
	msg="Checking $CC works ... "
	SHOW_MIXPROGRESS "$m" "$x" "$msg" 7
	cat > c.c <<EOF
	int main(){return 0;}
EOF
	$CC c.c 2>/dev/null
	if [ -f a.out ];then
		OK=$[$OK+50]
		SHOW_MIXPROGRESS "$m" "$x" "$msg" 0
	else
		SHOW_MIXPROGRESS "$m" "$x" "$msg" 10
		exit 1
	fi
	rm a.out
	rm c.c
}

CONF_GCC(){
	export m='Checking gcc ... '
	export x=7
	SHOW_MIXPROGRESS "$m" "$x"
	gcc="/usr/bin/gcc"
	if [ -f $gcc ];then
