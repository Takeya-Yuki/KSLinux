	fi
}

CONF_ROOT(){
	msg="Checking current user is root ... "
	SHOW_PROGRESS "$msg"
	U=$(whoami)
	if [ "$U" = "root" ];then
		if [ $FORCE_UNSAFE_CONFIGURE ] && [ $FORCE_UNSAFE_CONFIGURE -eq 1 ];then
			OK=$[$OK+100]
			SHOW_MIXPROGRESS "$msg" 6
			return 0
		else
			SHOW_MIXPROGRESS "$msg" "yes"
			err(){
			echo "Root User is not recommended, if you want to do so"
			echo "Please run following command and retry:"
			echo "export FORCE_UNSAFE_CONFIGURE=1"
			}
			msg=$(err)
			SHOW_MSG "$msg"
			exit 1
		fi
	else
		OK=$[$OK+100]
		SHOW_MIXPROGRESS "$msg" "no"
		return 0
	fi
}

CONF_OS(){
	DEBIAN=0
	UBUNTU=0
	KALI=0
	KS=0
	DEEPIN=0
	OPM=empty
	RPM=0
	SUSE=0

	msg="Checking OS Type ... "
	SHOW_PROGRESS "$msg"
	OSTYPE=$(cat /etc/issue|sed -rne "s/ .*//p")
	if [ "$OSTYPE" = "Redhat" ] || [ "$OSTYPE" = "Red" ];then
		OSTYPE=RHEL
	fi
	OK=$[$OK+100]
	SHOW_MIXPROGRESS "$msg" "$OSTYPE"
	case $OSTYPE in
		Ubuntu)
			UBUNTU=1
			OPM=apt
			;;
		Debian)
			DEBIAN=1
			OPM=apt
			;;
		Kali)
			KALI=1
			OPM=apt
			;;
		Deepin)
			DEEPIN=1
			OPM=apt
			;;
		KSLinux|Kurosawa)
			KS=1
			OPM=kpt
			;;
		RHEL|Fedora|CentOS)
			RPM=1
			OPM=yum
			;;
		SUSE|openSUSE)
			SUSE=1
			OPM=zypper
			;;
		*)			
			if [ $UNSUPPORTED_SYSTEM ] && [ $UNSUPPORTED_SYSTEM -eq 1 ];then
				SHOW_MIXPROGRESS "$msg" "5"
				return 0
			else
				err(){
				echo "KSLinux can only build on deb-based systems,"
				echo "kpm-based systems or yum-dnf-based systems,"
				echo "you can run following command to skip this check:"
				echo "export UNSUPPORTED_SYSTEM=1"
				}
				msg=$(err)
				SHOW_MSG "$msg"
				exit 1
			fi
			;;			
	esac
	return 0
}

CONF_KPM(){
	msg='Checking Package Manager ... '
	SHOW_MIXPROGRESS "$msg" 7
	KPM="/usr/bin/kpm"
	DPKG="/usr/bin/dpkg"
	OK=$[$OK+100]
	if [ -f $KPM ];then
		SHOW_MIXPROGRESS "$msg$KPM" 0
		return 0
	elif [ -f $DPKG ];then
		SHOW_MIXPROGRESS "$msg$DPKG" 0
		return 0
	else
		echo "not found"
		if [ $NO_PACKAGE_MANAGER ] && [ $NO_PACKAGE_MANAGER -eq 1 ];then
				SHOW_MIXPROGRESS "$msg" 6
				return 0
		else
			err(){
			echo "Please install Package Manager (dpkg) or (kpm) manually"
			echo "or run following command to skip this check:"
			echo "export NO_PACKAGE_MANAGER=1"
			}
			msg=$(err)
			SHOW_MSG "$msg"
			exit 1
		fi
	fi
}

CONF_LANG(){
	msg='Checking Language Variables are set ... '
	SHOW_PROGRESS "$msg"
	OK=$[$OK+100]
	if [ $PLANG -eq 1 ] || [ $PLANGUAGE -eq 1 ];then
		SHOW_PROGRESS "${msg}yes"
		info(){
		echo "You may meet some error while building some"
		echo "packages,run following command to solve:"
		echo "unset LANG; unset LANGUAGE;"
		}
		msg=$(info)
		SHOW_MSG "$msg"
	else
		SHOW_PROGRESS "${msg}no"
		return 0
	fi
}

SHOW_HELP(){
	SHOW_VERSION
	info1(){	
	echo ""
	echo "--------------------------"
	echo ""
	echo "Usage: configure [options]"
	echo ""
	echo "options:"
	echo "  --prefix=<prefix>  sets prefix dir (default: /ks/ramfs)"
	echo "  --target=<target>  sets build target (default: $TARGET)"
	echo "  --cross=<cross>    sets cross complier build path (default: SYSROOT/cross)"
	echo "  --sysroot=<root>   sets sysroot dir (default: /tool)"
	echo "  --srcdir=<srcdir>  sets source dir which contains source (default: SYSROOT/src)"
	echo "  --tmpdir=<tmpdir>  sets temp dir to store temp files (default: SYSROOT/tmp)"
	echo "  --version          show version of configure"
	echo "  --help             show this help"
	}
	msg=$(info1)
	SHOW_MSG "$msg"
}

SHOW_VERSION(){
	info(){
	echo "Kurasawa Configure Version: 1.0"
	echo "(C)Copyright Ruby Kurosawa 2000~2017"
	echo "This Script is licensed by Kurosawa"
	echo "Open Source License GPLv3-Compactible"
	echo "Version"
	}
	msg=$(info)
	SHOW_MSG "$msg"
}

PARSE_ARGS(){
	TEMP=`getopt -o "" --long "prefix:,target:,sysroot:,srcdir:,tmpdir:,cross:,version,help" -n 'configure' -- "$@"`
	if [ $? != 0 ] ; then SHOW_HELP >&2 ; exit 1 ; fi

	eval set -- "$TEMP"
	while true ; do
			case "$1" in
					--prefix) PREFIX=$2; shift 2 ;; #KS
					--target) TARGET=$2; shift 2 ;; #LFS_TGT
					--cross)  CROSS=$2;  shift 2 ;; #CROSS
					--sysroot) SYSROOT=$2; shift 2 ;; #LIBPARENT
					--srcdir) SRCDIR=$2; shift 2 ;; #SOURCEROOT
					--tmpdir) TMPDIR=$2; shift 2 ;; #BUILDTMP
					--version) SHOW_VERSION; exit 0;; #VERSION
					--help) SHOW_HELP; exit 0;; #HELP
					--) shift ; break ;;
					*) SHOW_HELP; exit 1 ;;
			esac
	done
}

CONF_PREINIT(){
	PLANG=0
	PLANGUAGE=0
	if [ $LANG ];then PLANG=1; unset LANG; fi
	if [ $LANGUAGE ];then PLANGUAGE=1; unset LANGUAGE; fi
	PREFIX=/ks/ramfs	
	SYSROOT=/tool
	CROSS=$SYSROOT/cross
	SRCDIR=$SYSROOT/src
	TMPDIR=$SYSROOT/tmp
	UNAMEM=$(uname -m)
	case "$UNAMEM" in
		i386|i486|i586|i686)
			TARGET=${UNAMEM}-ks-linux-gnu
			GFLAGS=""
			;;
		x86_64|amd64)
			TARGET=${UNAMEM}-ks-linux-gnu
			GFLAGS=""
			;;
		armv7l|armhf)
			TARGET=arm-ks-linux-gnueabihf
			#GFLAGS="-march=armv7-a -mfloat-abi=softfp -mtune=generic-armv7-a -mfpu=vfpv3-fp16"
			GFLAGS="--with-arch=armv7-a --with-tune=generic-armv7-a --with-fpu=vfpv3-fp16"
			;;
		armv8l|aarch64)
			TARGET=aarch64-ks-linux-gnu
			#GFLAGS="-mabi=lp64 -march=armv8-a -mtune=generic"
			GFLAGS="--with-abi=lp64 --with-arch=armv8-a --with-tune=generic"
			;;
	esac
}

CONF_CHECK_DIR(){
	NAME=$2
	VALUE=$3
	TRY=$1
	m1="Checking $NAME ..."
	SHOW_MIXPROGRESS "$m1" 7
	if [ -d $VALUE ];then
		r1="Found"
		SHOW_MIXPROGRESS "$m1" "$r1"
		if [ "$TRY" = "try" ];then
			m2="try to read $NAME ..."
			ls $VALUE 2>/dev/null 1>/dev/null
			if [ $? -eq 0 ];then
				r2=0
				OK=$[$OK+10]
				SHOW_MIXPROGRESS "$m1" "$r1" "$m2" "$r2"
			else
				r2=10
				SHOW_MIXPROGRESS "$m1" "$r1" "$m2" "$r2"
				exit 1
			fi
			m3="try to write $NAME ..."
			touch $VALUE/a 2>/dev/null 1>/dev/null
			if [ $? -eq 0 ];then
				r3=0
				OK=$[$OK+10]
				SHOW_MIXPROGRESS "$m1" "$r1" "$m2" "$r2" "$m3" "$r3"
				rm $VALUE/a
			else
				r3=10
				SHOW_MIXPROGRESS "$m1" "$r1" "$m2" "$r2" "$m3" "$r3"
				exit 1
			fi
			return 0;
		else
			OK=$[$OK+20]
			SHOW_MIXPROGRESS "$m1" "$r1"
		fi
	else
		r1="Not Found"
		SHOW_MIXPROGRESS "$m1" "$r1"
		if [ "$TRY" = "try" ];then
			m2="try to create $NAME ..."
			SHOW_MIXPROGRESS "$m1" "$r1" "$m2" 7
			mkdir -p $VALUE 2>/dev/null 1>/dev/null
			if [ $? -eq 0 ];then
				OK=$[$OK+20]
				SHOW_MIXPROGRESS "$m1" "$r1" "$m2" 0
				rm -rf $VALUE >/dev/null
				return 0;
			else
				SHOW_MIXPROGRESS "$m1" "$r1" "$m2" 10
				exit 1
			fi
		else
			exit 1
		fi
		
	fi
}

CONF_DIR(){
	CONF_CHECK_DIR try PREFIX $PREFIX
	CONF_CHECK_DIR no-try SYSROOT $SYSROOT
	CONF_CHECK_DIR try CROSS $CROSS
	CONF_CHECK_DIR try SRCDIR $SRCDIR
	CONF_CHECK_DIR try TMPDIR $TMPDIR
	return 0;
}

CONF_OUTPUT_ENV(){
	msg="Creating envsetup.sh ... "
	SHOW_MIXPROGRESS "$msg" 7
	export pwd="$(pwd)"
	sed -e "s!@pwd@!$pwd!g" -e "s!@TARGET@!$TARGET!g" \
	-e "s!@SRCDIR@!$SRCDIR!g" -e "s!@SYSROOT@!$SYSROOT!g" \
	-e "s!@CROSS@!$CROSS!g" -e "s!@PREFIX@!$PREFIX!g" \
	-e "s!@TMPDIR@!$TMPDIR!g" -e "s!@GFLAGS@!$GFLAGS!g" \
	-e "s!@UNAMEM@!$UNAMEM!g" \
	envsetup.sh.gui.in > envsetup.sh
	./src.in
	cat src>> envsetup.sh
	rm src
	chmod a+x envsetup.sh
	OK=$[$OK+100]
	SHOW_MIXPROGRESS "$msg" 0
}

CONF_OUTPUT_MAKEFILE(){
	msg="Creating Makefile ... "
	SHOW_MIXPROGRESS "$msg" 7
	./makefile.gui.in
	OK=$[$OK+100]
	SHOW_MIXPROGRESS "$msg" 0
	SHOW_MSG "Makefile generated,Input following command to build:
	make all"
}

CONF_WORK(){	
	CONF_OS
	CONF_ROOT
	CONF_SHELL_BASH
	CONF_SH_BASH
	CONF_DIR
	CONF_KPM
	CONF_YACC
	CONF_YACC_BISON
	CONF_AWK
	CONF_AWK_GAWK
	CONF_MAKEINFO
	CONF_PERL
	CONF_PATCH
	CONF_MAKE
	CONF_M4
	CONF_LDD
	CONF_GCC
	CONF_GXX
	CONF_LIBGCC
	CONF_LIBGCC64
	CONF_LANG
	CONF_OUTPUT_ENV
	CONF_OUTPUT_MAKEFILE
}

CONF_PREINIT
PARSE_ARGS "$@"
CONF_WORK


